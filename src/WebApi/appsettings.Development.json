{
  "UseInMemoryDatabase": true,
  "ConnectionStrings": {
    "CommandConnectionString": "Server=(local);Initial Catalog=yourDatabase;User ID=yourUsername;Password=yourPassword;MultipleActiveResultSets=True;Connection Timeout=100;",
    "QueryConnectionString": "Server=(local);Initial Catalog=yourDatabase;User ID=yourUsername;Password=yourPassword;MultipleActiveResultSets=True;Connection Timeout=100;ApplicationIntent=ReadOnly;"
  },
  "LoggingSettings": {
    "LogRequestEnabled": true,
    "LogResponseEnabled": true
  },
  "CacheSettings": {
    "Type": "Memory",
    "ExpirationInMinutes": 5,
    "RedisConnectionString": "REDIS_CONNECTION_STRING"
  },
  "PollyPoliciesSettings": {
    "RetryCount": 3,
    "RetryBase": 2
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": true,
    "BlockedRequestsLogLevel": "Warning",
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-Client-Id",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  "Serilog": {
    "Properties": {
      "Application": "Template WebApi"
    },
    "Using": [ "Serilog.Exceptions", "Serilog.Formatting.Compact" ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithCorrelationIdHeader",
      "WithExceptionDetails",
      "WithElasticApmCorrelationInfo"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information",
        "AspNetCoreRateLimit": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Message:lj} {NewLine}{Exception} {Properties:j}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:/logs/rate-limiting.log",
          "formatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter, Serilog.Formatting.Elasticsearch",
          "rollingInterval": "Hour",
          "retainedFileCountLimit": null,
          "fileSizeLimitBytes": null
        }
      }
    ]
  }
}
